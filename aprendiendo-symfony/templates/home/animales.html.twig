{% extends 'layouts/master.html.twig' %}

{%block titulo %} Animales {%endblock%}

{%block cabecera %}
    {{parent()}}
    <h1>Animales</h1>
{%endblock%}

{%block contenido %}
    {#
    <h1>{{ title }}</h1>
    <h2>{{nombre}}</h2>
    <h2>{{apellidos}}</h2>
    #}

    {#Crear variable#}
    {%set perro = 'Pastor Aleman'%}
    <h4>{{perro}}</h4>

    {#Trabajar con arrays#}
    {{dump(animales)}}
    {{animales[1]}}

    {#Trabajar con arrays asociativos#}
    {{dump(aves)}}
    {{aves.tipo ~ ' - '~aves.raza}}

    {#condicional#}
    {% if aves.tipo == 'palomo' %}
        <h1>Cuidado con el palomo volador</h1>
    {%else%}
        <h2>No hay palomos a la vista</h2>
    {%endif%}

    {#bucle#}
    {%if animales|length >=0%}
        <ul>
            {%for animal in animales%}
                <li>
                    {{animal}}
                </li>
            {%endfor%}
        </ul>
    {%endif%}

    {%for i in 0..10%}
        {{i}} <br>
    {%endfor%}

    {%if aves.color ends with 's'%}
        <h1>Empieza por G</h1>
    {%endif%}

    <hr>
    {{include('partials/funciones.html.twig',{'nombre':'LucasOrtins'})}}


{%endblock%}